<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/margin_5dp">

    <RelativeLayout
        android:padding="@dimen/padding_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/comment_name"
            style="@style/AppTheme.Subheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/comment_date"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/comment_date"
            style="@style/AppTheme.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/greySecondary"
            tools:text="9/27/2017" />


        <TextView
            android:id="@+id/comment_text"
            style="@style/AppTheme.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_date"
            android:layout_margin="@dimen/margin_5dp"
            android:textColor="@color/greyPrimary"
            tools:text="I thought it was pretty great! And I really have a ton to say wow." />

    </RelativeLayout>

</android.support.v7.widget.CardView>
